<!doctype html>
<html>
<head>
  <title><%= client.name %> Lead Form</title>
</head>
<body style="font-family:Arial; max-width:600px; margin:50px auto;">

<h2>Welcome to <%= client.name %></h2>

<form method="POST" action="/lead">
  <input type="hidden" name="clientCode" value="<%= client.code %>" />

  <input name="name" placeholder="Your Name" required
    style="width:100%; padding:10px; margin-bottom:10px;" />

  <input name="email" placeholder="Your Email" required
    style="width:100%; padding:10px; margin-bottom:10px;" />

  <input name="phone" placeholder="Phone Number"
    style="width:100%; padding:10px; margin-bottom:10px;" />

  <textarea name="message" placeholder="Message"
    style="width:100%; padding:10px; margin-bottom:10px;"></textarea>

  <button style="padding:10px 20px;">Submit Lead</button>
</form>

</body>
</html>
